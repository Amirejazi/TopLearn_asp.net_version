@model TopLearn.Core.DTOs.Question.QuestionViewModel
    ViewData["Title"] = "پرسش";
}


<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page">پرسش</li>
        </ul>
    </nav>
</div>

<div class="row ">
    <div class="col-md-3"></div>
    <form method="post">
        <input asp-for="CourseId" type="hidden"/>
        <div class="col-md-6">
            <div class="panel panel-info">
                <div class="panel-heading"> پرسش</div>
                <div class="panel-body">
                    <div class="form-group">
                        <label>عنوان سوال</label>
                        <input asp-for="Title" type="text" class="form-control">
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label>متن سوال</label>
                        <textarea id="Body" style="max-width: 100%;min-width:100%; max-height:250px"asp-for="Body" class="form-control"></textarea>
                        <span asp-validation-for="Body"></span>
                    </div>

                    <div class="row" style="margin:2px">
                        <p>
                            <input type="submit" value="ارسال سوال" class="btn btn-success"/>
                        </p>
                    </div>
                </div>

            </div>
        </div>

    </form>
</div>

@section Scripts
{
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>

    <script>
        CKEDITOR.replace('Body', {
            customConfig: '/js/config.js'
        });
    </script>
}
