@page
@using TopLearn.Core.Convertors
@model TopLearn.Web.Pages.Admin.Discounts.IndexModel
@{
    ViewData["Title"] = "لیست تخفیف ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست تخفیف ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست تخفیف های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div style="margin-bottom:10px">
                            <a  asp-page="CreateDiscount" class="btn btn-success" > افزودن تخفیف </a>
                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                            <tr role="row">
                                <th tabindex="0" rowspan="1" colspan="1" style="width: 193px;">کد تخفیف</th>
                                <th tabindex="0" rowspan="1" colspan="1" style="width: 193px;">درصد تخفیف</th>
                                <th tabindex="0" rowspan="1" colspan="1" style="width: 193px;">تعداد استفاده تخفیف</th>
                                <th tabindex="0" rowspan="1" colspan="1" style="width: 193px;">تاریخ شروع </th>
                                <th tabindex="0" rowspan="1" colspan="1" style="width: 193px;">تاریخ پایان </th>
                                <th tabindex="0" rowspan="1" colspan="1" style="width: 123px;">دستورات</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var discount in Model.Discounts)
                            {
                                <tr class="gradeA odd">
                                    <td class="sorting_1">@discount.DiscountCode</td>
                                    <td class="sorting_1">@discount.DiscountPercent</td>
                                    <td class="sorting_1">@((discount.UsableCount != null)? discount.UsableCount : "-")</td>
                                    <td class="sorting_1">@((discount.StartDate != null)? discount.StartDate.Value.ToShamsi() : "-")</td>
                                    <td class="sorting_1">@((discount.EndDate != null)? discount.EndDate.Value.ToShamsi() : "-")</td>
                                    <td class="center ">
                                        <a href="/Admin/Discounts/EditDiscount/@discount.DiscountId" class="btn btn-warning btn-sm">ویرایش</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>

                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
