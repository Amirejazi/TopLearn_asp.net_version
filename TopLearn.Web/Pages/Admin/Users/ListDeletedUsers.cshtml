@page
@using TopLearn.Core.Convertors
@model TopLearn.Web.Pages.Admin.Users.ListDeletedUsersModel
@{
    ViewData["Title"] = "لیست کاربران حذف شده";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست کاربران حذف شده</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست کاربران حذف شده سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div style="margin-bottom:10px">
                            <a  asp-page="CreateUser" class="btn btn-success" > افزودن کاربر</a>
                        </div>
                        <form class="row">
                            <div class="col-sm-3">
                                <div class="dataTables_length" id="dataTables-example_length">
                                    <label>نام کاربری:<input type="search" name="userNamefliter" class="form-control input-sm" aria-controls="dataTables-example"></label>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div id="dataTables-example_filter" class="dataTables_filter">
                                    <label>ایمیل:<input type="search" name="emailfliter" class="form-control input-sm" aria-controls="dataTables-example"></label>
                                </div>
                            </div>
                            <div class="col-sm-1">
                                <div style="margin-top:19px !important;" class="dataTables_filter">
                                    <input class="btn btn-info" style="max-height:30px;" type="submit" value="بگرد" />
                                </div>

                            </div>
                            <div class="col-sm-3">
                                <div style="margin-top:19px !important;" class="dataTables_filter">
                                    <a class="btn btn-outline btn-info" style="max-height:30px;" href="/Admin/Users">خالی</a>
                                </div>

                            </div>
                        </form>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr role="row">
                                    <th tabindex="0" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 193px;">نام کاربری</th>
                                    <th tabindex="0" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 264px;">ایمیل</th>
                                    <th tabindex="0" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 244px;">وضعیت</th>
                                    <th tabindex="0" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending" style="width: 166px;">تاریخ ثبت نام</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.UsersForAdminViewModel.Users)
                                {
                                    <tr class="gradeA odd">
                                        <td class="sorting_1">@user.UserName</td>
                                        <td class=" ">@user.Email</td>
                                        @if (user.IsActive)
                                        {
                                            <td class="text text-success">فعال</td>
                                        }
                                        else
                                        {
                                            <td class="text text-danger">غیرفعال</td>
                                        }
                                        <td class="center ">@user.RegisteredDate.ToShamsi()</td>
                                        
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="row">
                            
                                <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                    <ul class="pagination">
                                        @for (int i = 1; i <= Model.UsersForAdminViewModel.PageCount; i++)
                                        {
                                            
                                            <li class="paginate_button @((i== Model.UsersForAdminViewModel.CurrentPage)? "active" : "")" onclick="AddParamPageIdToUrl('pageId', @i)"  aria-controls="dataTables-example" tabindex="0"><a href="#">@i</a></li>
                                        }
                                        
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
