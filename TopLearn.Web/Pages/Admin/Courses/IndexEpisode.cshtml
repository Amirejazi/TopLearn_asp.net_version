@page "{id}"
@model TopLearn.Web.Pages.Admin.Courses.IndexEpisodeModel
@{
    ViewData["Title"] = "لیست قسمت ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست قسمت ها</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست قسمت ها
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div style="margin-bottom:10px">
                    <a asp-page="CreateEpisode" asp-route-id="@ViewData["CourseId"].ToString()" class="btn btn-success"> افزودن قسمت جدید</a>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
            <thead>
                <tr role="row">
                    <th tabindex="0" rowspan="1" colspan="1" style="width: 264px;">عنوان قسمت</th>
                    <th tabindex="0" rowspan="1" colspan="1" style="width: 244px;">زمان جلسه</th>
                    <th tabindex="0" rowspan="1" colspan="1" style="width: 193px;"> رایگان</th>
                    <th tabindex="0" rowspan="1" colspan="1" style="width: 123px;">دستورات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var episode in Model.CourseEpisodes)
                {
                    <tr class="gradeA odd">
                        <td class=" ">@episode.EpisodeTitle</td>
                        <td class="center ">@episode.EpisodeTime</td>
                        <td>
                        @if (episode.IsFree)
                        {
                            <span class="text-success"> <i class="glyphicon glyphicon-ok"></i></span>
                        }
                        else
                        {
                            <span class="text-danger"> <i class="glyphicon glyphicon-remove"></i></span>
                        }
                        </td>
                        <td class="center ">
                            <a href="/Admin/Courses/EditEpisode/@episode.EpisodeId" class="btn btn-warning btn-sm">ویرایش</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
