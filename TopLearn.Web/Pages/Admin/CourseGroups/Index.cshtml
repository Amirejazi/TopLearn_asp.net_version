@page 
@model TopLearn.Web.Pages.Admin.CourseGroups.IndexModel
@{
    ViewData["Title"] = "لیست گروه ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست گروه ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست گروه های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div style="margin-bottom:10px">
                            <a  asp-page="CreateGroup" class="btn btn-success" > افزودن گروه </a>
                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                            <tr role="row">
                                <th tabindex="0" rowspan="1" colspan="1" >عنوان گروه</th>
                                <th tabindex="0" rowspan="1" colspan="1" >زیر گروه</th>
                                <th tabindex="0" rowspan="1" colspan="1" >دستورات</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var group in Model.CourseGroups.Where(g => g.ParentId==null))
                            {
                                <tr class="gradeA odd">
                                    <td class="sorting_1">@group.GroupTitle</td>
                                    <td class="sorting_1">
                                        @if (group.CourseGroups.Any())
                                        {
                                            <ul>
                                                @foreach (var sub in group.CourseGroups)
                                                {
                                                    <li style="margin:4px">
                                                        @sub.GroupTitle - <a href="/Admin/CourseGroups/EditGroup/@sub.GroupId" class="btn btn-outline btn-warning btn-sm">ویرایش</a>
                                                    </li>
                                                }
                                            </ul>
                                        }
                                    </td>
                                        
                                    <td class="center ">
                                        <a href="/Admin/CourseGroups/CreateGroup/@group.GroupId" class="btn btn-info btn-sm">افزودن زیر گروه</a>
                                        <a href="/Admin/CourseGroups/EditGroup/@group.GroupId" class="btn btn-warning btn-sm">ویرایش</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>

                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

