@model IEnumerable<TopLearn.DataLayer.Entities.Course.CourseEpisode>
@{
    ViewData["Title"] = "مدیریت قسمت ها";
}
<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"] </li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <partial name="_SideBar" />
                </div>
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1> @ViewData["Title"] </h1></header>
                        <a class="btn btn-success" asp-controller="Master" asp-action="AddEpisode" asp-route-course_id="@ViewBag.CourseId">افزودن قسمت جدید</a>
                        <div class="inner form-layer">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>عنوان</th>
                                        <th>زمان</th>
                                        <th>وضعیت</th>
                                        <th>دستورات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var episode in Model)
                                    {
                                        <tr>
                                            <td>
                                                @episode.EpisodeTitle
                                            </td>
                                            <td>@episode.EpisodeTime</td>
                                            <td>
                                                @if (episode.IsFree)
                                                {
                                                    <span class="success">رایگان</span>
                                                }
                                                else
                                                {
                                                    <span class="info">نقدی</span>
                                                }
                                            </td>
                                            <td>
                                                <a class="btn btn-info btn-block" asp-controller="Course" asp-action="DownloadFiles" asp-route-episodeId="@episode.EpisodeId">دانلود</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>


